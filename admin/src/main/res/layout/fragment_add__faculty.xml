<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbg"
    tools:context=".Add_Faculty">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty Registration form"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="430dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:hint="Faculty Name"
                    android:id="@+id/reg_facultyName"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="20dp"
                    android:hint="Qualification"
                    android:id="@+id/reg_qualification"
                    android:singleLine="true"
                    android:textSize="18sp" />


                <RadioGroup
                    android:id="@+id/f_radioSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <RadioButton
                        android:id="@+id/f_radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/f_radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Female" />


                </RadioGroup>



                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10dp"
                    android:hint="Date of Joining"
                    android:id="@+id/reg_dateofjoining"
                    android:editable="false"
                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:entries="@array/department"
                    android:id="@+id/reg_faculty_department"
                    android:textColor="#000"/>


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="20dp"
                    android:hint="Mobile No"
                    android:id="@+id/reg_faculty_mobileNo"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="20dp"
                    android:hint="Email Id"
                    android:id="@+id/reg_faculty_emailID"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="20dp"
                    android:hint="Address"
                    android:id="@+id/reg_faculty_address"
                    android:singleLine="true"
                    android:inputType="textPostalAddress"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#d67601"
                        android:text="Submit"
                        android:id="@+id/btn_faculty_submit"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="22sp" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#d67601"
                        android:text="Cancel"
                        android:id="@+id/btn_faculty_cancel"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="22sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>