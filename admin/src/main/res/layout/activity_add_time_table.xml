<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbg"
    tools:context=".AddTimeTable">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Time Table"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_facultyid"
            android:entries="@array/facultyID"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_course"
            android:textColor="#000"
            android:layout_marginTop="25dp"
            android:entries="@array/course"
            android:textSize="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_department"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:entries="@array/department"
            android:textSize="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_batch"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:entries="@array/batch"
            android:textSize="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_day"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:entries="@array/day"
            android:textSize="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_lactureNo"
            android:entries="@array/lectureNo"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:textColor="#000"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sp_subject"
            android:entries="@array/subject"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textSize="20dp"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#d67601"
                android:text="Add"
                android:id="@+id/btn_addTimeTable"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#d67601"
                android:text="Cancel"
                android:id="@+id/btn_cancelTimeTable"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>